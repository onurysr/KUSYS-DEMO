@model List<StudentCourse>
@{
    var count = 1;
}
<table class="table">
    <thead>
        <tr>
            <th scope="col">Öğrenci Numarası</th>
            <th scope="col">Öğrenci Adı</th>
            <th scope="col">Ders Adı</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Student.StudentId</td>
            <td>@item.Student.FirstName @item.Student.LastName</td>
            <td>@item.Course.CourseName</td>
        </tr>
        }
    </tbody>
</table>
<div class="row">
    <div class="col-12 text-black-50"></div>
    <div class="col-5">
        <a asp-action="Get" asp-controller="Course" class="btn btn-primary">Dersleri Göster</a>
    </div>
</div>
